{
    "hardware": {
        "arduino": {
            "port": "/dev/ttyACM0",
            "baudrate": 9600,
            "timeout": 1.0
        },
        "ot2": {
            "ip": "169.254.197.90",
            "port": 31950
        }
    },
    "experiment": {
        "results_dir": "results",
        "log_dir": "logs"
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "upload": {
        "enabled": false,
        "type": "local",
        "s3": {
            "bucket": "experiment-results",
            "region": "us-west-2"
        }
    },
    "defaults": {
        "arduino_control": {
            "base0_temp": 25.0,
            "pump0_ml": 0.0,
            "ultrasonic0_ms": 0
        },
        "reference": {
            "type": "RE",
            "enabled": true
        }
    },
    "limits": {
        "temperature": {
            "min": 0.0,
            "max": 100.0
        },
        "voltage": {
            "min": -2.0,
            "max": 2.0
        },
        "current": {
            "min": -1.0,
            "max": 1.0
        }
    }
}